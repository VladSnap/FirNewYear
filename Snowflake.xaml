<UserControl x:Name="SnowFlake" x:Class="FirNewYear.Snowflake"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#00000000">
        <Grid x:Name="SnowFlakeGrid" Width="{Binding ElementName=SnowFlake, Path=Width}" 
          Height="{Binding ElementName=SnowFlake, Path=Height}"
          Background="{Binding ElementName=SnowFlake, Path=Background}" MouseDown="SnowFlakeGrid_MouseDown">

        </Grid>
    </Grid>
</UserControl>
